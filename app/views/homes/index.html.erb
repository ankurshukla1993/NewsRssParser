<h1 class="top-story-section-heading">Top Stories</h1>

<div class="main-gallery js-flickity" data-flickity-options='{ "wrapAround": true }'>

<% @top_stories.each do |story| %>

  <div class= "top-story-card">
    <div class="top-story-card-title"><%= story[:title] %></div>
    <div class="top-story-card-full-story-link"><%= link_to 'Full Story', story[:link], target: :_blank %></div>
    <div class="top-story-card-description"><%= story[:description]%></div>
  </div>

<% end %>

</div>

