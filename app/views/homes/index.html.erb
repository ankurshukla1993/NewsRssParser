
<% @all_stories.each do |story| %>
  <h1 class="top-story-section-heading"><%= story[0] %></h1>
  <div class="main-gallery js-flickity" data-flickity-options='{ "wrapAround": true }'>
    <% story[1].each do |each_story| %>
      <div class= "top-story-card">
        <div class="top-story-card-title"><%= each_story[:title] %></div>
        <div class="top-story-card-full-story-link"><%= link_to 'Full Story', each_story[:link], target: :_blank %></div>
        <div>Published at: <%= each_story[:date].strftime("%I:%M %P") %></div>
        <div class="top-story-card-description"><%= each_story[:description]%></div>
      </div>
    <% end %>
  </div>
<% end %>